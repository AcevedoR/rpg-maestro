{
  "name": "rpg-maestro",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/rpg-maestro/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "dev": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ],
      "options": {
        "buildTarget": "rpg-maestro:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "rpg-maestro:build:development"
        },
        "production": {
          "buildTarget": "rpg-maestro:build:production"
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ],
      "options": {
        "buildTarget": "rpg-maestro:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "rpg-maestro:build:development"
        },
        "production": {
          "buildTarget": "rpg-maestro:build:production"
        }
      }
    },
    "rpg-maestro:build": {
      "configurations": {
        "production": {}
      }
    },
    "rpg-maestro:preview:e2e-tests": {
      "configurations": {
        "e2e-tests": {}
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release"
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build . -f apps/$NX_TASK_TARGET_PROJECT/Dockerfile -t acevedor/$NX_TASK_TARGET_PROJECT:$(cat ./app_version) --platform linux/amd64"
      },
      "dependsOn": [
        "build"
      ]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker push acevedor/$NX_TASK_TARGET_PROJECT:$(cat ./app_version)"
      },
      "dependsOn": [
        "semantic-release", "docker-build"
      ]
    }
  }
}
