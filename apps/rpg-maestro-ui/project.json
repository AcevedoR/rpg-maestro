{
  "name": "rpg-maestro-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/rpg-maestro-ui/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project rpg-maestro-ui --web",
  "targets": {
    "init-e2e-setup": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "PORT=8099 npx nx run rpg-maestro:dev --configuration=e2e-tests",
          "npx nx run rpg-maestro-ui:preview --configuration=e2e-tests"
        ]
      }
    },
    "build":{
      "configurations": {
        "e2e-tests": {}
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release"
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build . -f apps/$NX_TASK_TARGET_PROJECT/Dockerfile -t acevedor/$NX_TASK_TARGET_PROJECT:$(cat ./app_version) --platform linux/amd64"
      },
      "dependsOn": [
        "build"
      ]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker push acevedor/$NX_TASK_TARGET_PROJECT:$(cat ./app_version)"
      },
      "dependsOn": [
        "semantic-release", "docker-build"
      ]
    }
  }
}
